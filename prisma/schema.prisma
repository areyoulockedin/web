generator client {
  provider = "prisma-client-js"
  output   = "./generated/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String      @id @default(uuid())
  clerkId     String      @unique
  sessionKey  String      @unique
  timeEntries TimeEntry[]
}

model TimeEntry {
  id          Int       @id @default(autoincrement())
  sessionKey  String
  timeSpent   Float
  language    String
  timestamp   DateTime
  user        User      @relation(fields: [sessionKey], references: [sessionKey])
}
